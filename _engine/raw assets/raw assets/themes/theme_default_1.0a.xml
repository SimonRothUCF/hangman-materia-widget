<?xml version="1.0"?>
<Theme>
	<!--
		'theme_bg' is a special case used to load an image behind the game engine
		registering it to a movieclip will cause that movie clip to be switchd to _visible=false
		basically you link it to the built in background to hide it so you can see the loaded image
		required attributes: 'id', 'src'
	-->
	<tBG id="theme_bg" src="theme_default_bg.jpg"/>
	<!--
		these are arbitrary names that must corrispond to the ids you register movie clips to in the movie
		required attributes: 'id'
		optional attributes: 'color', 'alpha',
	-->
	<tObj id="btn_start_bg" color="0xA6B8C9" />
	<tObj id="btn_start_hl" color="0xFFFFFF" alpha="30" />
	<tObj id="btn_start_label" color="0x000000" />
	<tObj id="title_txt" color="0x000000"/>
	<tObj id="clue_label" color="0x5C5237"/>
	<tObj id="guess_label" color="0x5C5237"/>
	<tObj id="guess_prog_fill" color="0x5C5237"/>
	<tObj id="guess_prog_label" color="0x5C5237"/>
	<tObj id="cat_prog_fill" color="0x5C5237"/>
	<tObj id="cat_prog_label" color="0x5C5237"/>
	<!--
		Component Style Tags are a special case for components that can be styled
		the id tag works in the normal way, however in tStyle you nest style tags for each style property you want to change.
		required attributes: 'id'
			style requried attribues: 'prop', 'value'
	-->
	<tStyle id="catListBox">
		<style prop="themeColor" value="0xA6B8C9" />
		<style prop="textSelectedColor" value="0xFFFFFF" />
	</tStyle>
	<tStyle id="clue_TextArea">
		<style prop="fontSize" value="12" />
		<style prop="color" value="0x5C5237" />
	</tStyle>
	<tStyle id="alertStyle">
	<style prop="fontSize" value="10" />
		<style prop="themeColor" value="0xA6B8C9" />
	</tStyle>
</Theme>