doctype 5

html(lang='en', ng-app='HangmanCreator')
  head
    title Hangman Creator
    meta(charset='utf-8')

    link(href='http://fonts.googleapis.com/css?family=Lato', rel='stylesheet', type='text/css')
    link(href='http://fonts.googleapis.com/css?family=Purple+Purse', rel='stylesheet', type='text/css')
    link(href='creator.css', rel='stylesheet', type='text/css')

    //- Development scripts
    script(src='//localhost:35729/livereload.js', defer)
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular-animate.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.1/angular-touch.js')

    //- Production scripts
    //- script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular.min.js')
    //- script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular-animate.min.js')
    //- script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.1/angular-touch.min.js')

    script(src='assets/lib/modernizr.js', data-embed='false')
    script(src='/js/materia.require.js', data-embed='false')
    script(src='creator.js')

  body(ng-cloak, ng-controller='HangmanCreatorCtrl')
    div#modal
    header
      input(
        type='text',
        role='title',
        placeholder='Enter a title here.',
        ng-model='title',
        value='{{title}}'
      )
    ul(aria-label='questions')
      li.titles(aria-hidden='true')
        h3 Hint
        h3 Words

      li.item(ng-repeat='item in items')
        span.num {{$index+1}}
        img(ng-class='{shown:item.foc}', src='assets/img/head-bubble.png')
        span.hint(aria-label='hint')
          div.arrow-left(ng-class='{shown:item.foc}')
          textarea(
            placeholder='Enter a hint here.',
            value='{{item.ques}}',
            ng-focus='item.foc=true',
            ng-blur='item.foc=false',
            ng-model='item.ques'
          )
        span.word(aria-label='word')
          center
            textarea(
              placeholder='Enter a word here.',
              value='{{item.ans}}',
              ng-model='item.ans'
            )
          div.alert(ng-class='{hide:item.ans.length==0}')
            span.icon-alert(ng-class='{shown:item.ans.length > 34}')
            | {{34 - item.ans.length}} characters remaining.
        button.delete(aria-label='delete', ng-click='removeItem($index)')
          span.icon-close
          span.descript remove

      li
        button.add(aria-label='add item', ng-click='addItem()')
          span.icon-plus 
          span &nbsp;add question

    section.footer
      span.attempts
        div.slide-btn(ng-init='attempts=4')
          div.bar(class="pos-{{attempts}}")
            div.circle(
              ng-mousedown='mousedown=true',
              ng-mouseup='mousedown=false',
              ng-mousemove='moveSlider($event)',
              ng-bind='attempts')
            div.circle-trail
          div.container.thr(ng-click='attempts=3')
            div.point.thr 3
          div.container.four(ng-click='attempts=4')
            div.point.four 4
          div.container.five(ng-click='attempts=5')
            div.point.five 5
          div.container.six(ng-click='attempts=6')
            div.point.six 6
          div.container.svn(ng-click='attempts=7')
            div.point.svn 7
        //- div.numbers
        //-   span.thr(ng-class='{fade: attempts == 3}') 3
        //-   span.four(ng-class='{fade: attempts == 4}') 4
        //-   span.five(ng-class='{fade: attempts == 5}') 5
        //-   span.six(ng-class='{fade: attempts == 6}') 6
        //-   span.svn(ng-class='{fade: attempts == 7}') 7
        p Attempts per word

      span.partial
        p Partial scoring
        div on
        div off


