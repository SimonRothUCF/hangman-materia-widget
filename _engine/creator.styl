@font-face
  font-family 'icomoon'
  src url('_assets/fonts/icomoon.eot')
  src url('_assets/fonts/icomoon.eot?#iefix') format('embedded-opentype'), url('_assets/fonts/icomoon.woff') format('woff'), url('_assets/fonts/icomoon.ttf') format('truetype'),url('_assets/fonts/icomoon.svg#icomoon') format('svg')
  font-weight normal
  font-style normal

.icon-alert, .icon-plus, .icon-close, .icon-rotate, .icon-image, .icon-rdio-u, .icon-rdio-c
  font-family 'icomoon'
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1
  -webkit-font-smoothing antialiased

.icon-alert
  opacity 0
  transition 300ms
  
  &.shown
    opacity 1

.icon-alert:before
  content "\e006" 
.icon-plus:before   
  content "\e007" 
.icon-close:before  
  content "\e008" 
.icon-rotate:before 
  content "\e001" 
.icon-image:before  
  content "\e000" 
.icon-rdio-u:before 
  content "\e002" 
.icon-rdio-c:before 
  content "\e003" 

input:focus, select:focus, textarea:focus, button:focus
  outline none

textarea
  resize none 

html, body
  cursor default
  background #2f3944
  color #fff
  font-family "Purple Purse", "Arial", sans-serif
  margin 0
  padding 0
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

ul
  list-style-type none 

button
  position absolute
  background-color rgba(0,0,0,0.4)
  border-radius 4px
  color #ddd
  font-size 13px
  height 33px
  margin 5px
  padding 8px
  width 130px
  border none
  
  &:hover .descript
    opacity 1 
  
  .descript
    position absolute
    font-size 13px
    width 90px
    opacity 0
    padding 5px
    margin -5px
    transition all 200ms
  
header
  margin 0 0 5px
  
  input
    font-family "Purple Purse"
    background #384451
    margin 0
    color #FFF
    border none
    padding 15px
    text-align center
    font-size 30px
    width 100%
    &::-webkit-input-placeholder
      color rgba(255,255,255,0.8) 
    &:-moz-placeholder
      color rgba(255,255,255,0.8) 
    &::-moz-placeholder
      color rgba(255,255,255,0.8) 
    &:-ms-input-placeholder
      color rgba(255,255,255,0.8) 

body
  position absolute
  top 0
  left 0
  height 100%
  width 100%
  overflow-x hidden
  -webkit-backface-visibility hidden
  ul
    position relative
    width 825px
    margin auto
    padding 0
    perspective 800px
    perspective-origin 50% 100%
  
    li
      margin 0 0 30px 0
      height 160px
      transform-style preserve-3d

      &.titles
        height 60px
        margin 0
  	  		
      &.item
        &.ng-enter, &.ng-leave
          transition 1025ms cubic-bezier(0.190, 1.000, 0.220, 1.000) all
      
        &.ng-leave.ng-leave-active, &.ng-enter
          transform rotateX(-180deg) translatez(30px)
          opacity 0
          height 0
          margin 0 0
        
        &.ng-enter.ng-enter-active, &.ng-leave
          transform rotateX(0deg) translatez(0)
          opacity 1
          height 160px
          margin 0 0 30px 0

      h3
        display inline-block
        position absolute
        text-align center
        width 50%
        
        &:nth-child(2)
          left 50% 
          
      img
        height 80px
        position absolute
        bottom 20px
        left -95px
        transform scale(0)
        transition 500ms cubic-bezier(0.190, 1.000, 0.220, 1.000) all
    
        &.shown
          transform none
  				
      .num
        position absolute
        padding 20px
        margin-left -83px
        line-height 10px
        font-size 26px
  	  		
      .word
        right 0
    
      .hint
        
        .arrow-left
          position absolute
          left -30px
          top 95px
          width 0
          height 0
          border-top 20px solid transparent
          border-bottom 20px solid transparent
          border-right  30px solid #FFF
          transform-origin 100% 50%
          transform scale(0)
          transition 500ms cubic-bezier(0.190, 1.000, 0.220, 1.000) all
      
          &.shown
            transform none
    
      .hint, .word
        position absolute
        width 400px
        height inherit
        background #FFF
        border-radius 20px
    
        textarea
          font-family "Purple Purse"
          border none
          font-size 20px
          width 90%
          height 120px
          margin 15px 0 0 0
          text-align center 

        .alert
          position absolute
          color rgba(0,0,0,0.7)
          font-family 'Lucida Grande', arial, serif
          font-size 13px
          bottom 17px
          left 17px
          opacity 1
          transition all 200ms
  
          &.hide
            opacity 0
  
          span
            padding 0 2px 0 0
            font-size 15px
            color #7F2626
    
      button.delete
        right -58px
        width 35px
        margin-top 13px
      
      .descript
        top 7px
        left 25px
        color rgba(255,255,255,0.6)
  				
      button.add
        left 50%
        margin 0 0 0 -68px
        transition 200ms all
  	  		
		
	
